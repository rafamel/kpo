{
  "name": "kpo",
  "description": "A task runner that goes where npm scripts won't, for the true capo",
  "version": "0.23.0",
  "author": "Rafa Mel",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "task runner",
    "task",
    "runner",
    "run",
    "cli",
    "nps",
    "jake",
    "monorepo",
    "lerna"
  ],
  "type": "module",
  "types": "./build/index.d.ts",
  "exports": "./build/index.js",
  "files": [
    "build/"
  ],
  "bin": {
    "kpo": "build/kpo.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "node": "kpo --file kpo.tasks.cjs node --",
    "build": "kpo --file kpo.tasks.cjs build --",
    "tarball": "kpo --file kpo.tasks.cjs tarball --",
    "docs": "kpo --file kpo.tasks.cjs docs --",
    "fix": "kpo --file kpo.tasks.cjs fix --",
    "lint": "kpo --file kpo.tasks.cjs lint --",
    "test": "kpo --file kpo.tasks.cjs test --",
    "commit": "kpo --file kpo.tasks.cjs commit --",
    "release": "kpo --file kpo.tasks.cjs release --",
    "distribute": "kpo --file kpo.tasks.cjs distribute --",
    "validate": "kpo --file kpo.tasks.cjs validate --",
    "version": "kpo --file kpo.tasks.cjs version --"
  },
  "homepage": "https://github.com/rafamel/kpo",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/kpo"
  },
  "bugs": {
    "url": "https://github.com/rafamel/kpo/issues"
  },
  "devDependencies": {
    "@jest/globals": "^27.0.3",
    "@riseup/library": "^0.12.0",
    "@types/common-tags": "^1.8.0",
    "@types/debounce": "^1.2.0",
    "@types/fs-extra": "^9.0.11",
    "@types/update-notifier": "^5.0.0",
    "coveralls": "^3.1.0",
    "kpo": "^0.22.0",
    "tsup": "^5.12.1",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "arg": "^5.0.0",
    "as-table": "^1.0.55",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "ci-info": "^3.1.1",
    "cli-belt": "^1.0.3",
    "cli-select": "^1.1.2",
    "common-tags": "^1.8.0",
    "debounce": "^1.2.1",
    "errorish": "^1.0.0",
    "execa": "^5.0.0",
    "exits": "^2.0.1",
    "find-up": "^5.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.6",
    "is-unicode-supported": "^0.1.0",
    "merge-strategies": "^0.2.0",
    "ora": "^6.0.0",
    "pipettes": "^0.1.3",
    "prefix-stream": "^1.0.1",
    "type-core": "^0.12.0",
    "update-notifier": "^5.1.0"
  }
}
